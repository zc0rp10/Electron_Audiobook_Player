{
  "name": "electron-audiobook-player",
  "productName": "Bear Audiobook Player",
  "version": "0.2.0",
  "description": "An audiobook player for the desktop written for Electron.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=release-builds",
    "package-win": "electron-packager . 'Bear Audiobook Player' --overwrite --asar --platform=win32 --arch=ia32 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Bear Audiobook Player\"",
    "package-linux": "electron-packager . Bear-Audiobook-Player --overwrite --asar --platform=linux --arch=x64 --prune=true --out=release-builds"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zc0rp10/electron_audiobook_player.git"
  },
  "keywords": [
    "electron",
    "audibook",
    "player",
    "javascript",
    "html",
    "css"
  ],
  "author": "bjorn.fallbom@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zc0rp10/electron_audiobook_player/issues"
  },
  "homepage": "https://github.com/zc0rp10/electron_audiobook_player#readme",
  "devDependencies": {
    "electron": "^15.5.5",
    "electron-packager": "^14.2.1"
  },
  "dependencies": {
    "fs-extra": "^8.1.0",
    "music-metadata": "^6.3.4"
  }
}
